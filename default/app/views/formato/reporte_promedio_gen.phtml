function UbicarFilaTipoEnsayo($sheet, $tipoEnsayo)
{
  for ($i=25; $i < 200; $i++) {
    if (trim($sheet->getCell("A$i")->getValue()) == $tipoEnsayo) {
      return $i;
    }
  }

  return null;
}

